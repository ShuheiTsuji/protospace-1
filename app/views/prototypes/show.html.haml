.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = image_tag(set_profile_photo(@prototype.user), alt: "profile_photo", class: "media-object", style: "width: 64px; height: 64px;")
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            by
            = link_to "#{@prototype.user.name}", user_path(@prototype.user)
            .degree
              = @prototype.user.position

    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
      .extra-button
        - if user_signed_in? && @prototype.user_id == current_user.id
          -# .btn.btn-default.navbar-btn
          -#   = link_to "Edit", edit_prototype_path(@prototype)
          .btn.btn-default.navbar-btn
            = link_to "Delete", prototype_path(@prototype), method: :delete
  .row
    .col-md-9.image-box
      = image_tag @prototype.set_main_thumbnail, class: 'img-responsive img-size-fix'
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.captured_images.sub.each do |image|
          %li.list-group-item
            = image_tag(image.content, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catch_copy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe

.text-center
  %ul.pagination
    %li.disabled
      %a{"aria-label": "Previous", href: "#"}
        %span{"aria-hidden": "true"} «
